{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "worker": true,
    "mocha": true,
    "jest": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-undef": "error"
  },
  "globals": {
    "helpers": true,
    "d3": true,
    "c3": true
  }
}
